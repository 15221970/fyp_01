<form action="/user/create" method="POST"  >
    <div class="form-group">
        <label>Name:</label>
        <input type="text" class="form-control" name="User[username]" required>
    </div>
    <label>Password:</label>
    <div>
        <input type="password" id="psw" required class="form-control" minlength="8" placeholder="Password"
            name="User[password]">
        <small id="passwordHelpBlock" class="form-text text-muted">
            Your password must be 8-20 characters long.
        </small>
    </div>

    <br>
    <label>Confirm Password:</label>
    <div>
        <input type="password" class="form-control" placeholder="Confirm Password" id="confirm_password" required>

        <small id="passwordHelpBlock" class="form-text text-muted">
            Must be same as the password you input above.
        </small>

    </div>
